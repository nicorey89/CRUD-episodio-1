<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% productosVistos.forEach(producto => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%- producto.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%- producto.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2><%- toThousand(producto.price - (producto.price * producto.discount / 100)) %></h2>
							<% if(producto.discount > 0) { %>
							<span><%- producto.discount %>% off</span>
							<% } %>
							<p><%- producto.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% productosEnOferta.forEach(producto => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
						<a href="/products/detail/<%- producto.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= producto.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2><%- toThousand(producto.price - (producto.price * producto.discount / 100)) %></h2>
								<span><%- producto.discount %>% off </span>
								<p><%- producto.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
				</section>
			</div>
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>